<% @title = "メモ編集" %>

<h1>メモ編集</h1>
<form action="/memos/<%= h(@memo['id']) %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p>タイトル:</p>
  <input type="text" name="title" value="<%= h(@memo['title']) %>" maxlength="50">
  <p>内容:</p>
  <textarea name="content" maxlength="500"><%= h(@memo['content']) %></textarea>
  <button type="submit">更新</button>
  <a href="/memos">戻る</a>
</form>
