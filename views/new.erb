<% @title = "メモ作成" %>

<h1>メモ作成</h1>
<form action="/memos" method="POST">
  <p>タイトル:</p>
  <input type="text" name="title" id="title" maxlength="50" autocomplete="off">
  <p>内容:</p>
  <textarea name="content" id="content" maxlength="500"></textarea>
  <div class="button-group">
    <button type="submit">保存</button>
    <a href="/memos">戻る</a>
  </div>
</form>
